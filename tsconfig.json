{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2017", "dom"],
    "jsx": "react",
    "module": "commonjs", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules", "**/graphql-types.ts"],
    "baseUrl": ".",
    "paths" : {
      "@root": ["."],
      "@src": ["src"],
      "@style": ["src/style"],
      "@images": ["assets/images"],
      "@templates": ["assets/templates"],
      "@posts": ["assets/posts"],
      "@projects": ["assets/projects"],
      "@components": ["src/components"],
      "@pages": ["src/pages"],
    }
  }
}
