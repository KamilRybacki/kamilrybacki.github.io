{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2017", "dom"],
    "jsx": "react",
    "module": "commonjs", 
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths" : {
      "@root/*": ["."],
      "@src/*": ["./src"],
      "@style/*": ["./src/style"],
      "@images/*": ["./assets/images"],
      "@templates/*": ["./assets/templates"],
      "@posts/*": ["./assets/posts"],
      "@projects/*": ["./assets/projects"],
      "@components/*": ["./src/components"],
      "@pages/*": ["./src/pages"],
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
}
