{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2017", "dom"],
    "jsx": "react",
    "module": "commonjs", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "**/graphql-types.ts"]
}
